{
  "apps": [
    {
      "name": "node",
      "script":"/opt/server/app.js",
      "env": {
        "LC_CTYPE": "en_US.UTF-8",
        "TZ": "UTC",
        "DEBUG": "x"
      },
      "node_args": "--max-old-space-size=400 --inspect=0.0.0.0:9229",
      "exec_mode": "fork_mode",
      "instances": 1,
      "watch": [
        "/opt/server"
      ],
      "log_date_format": "YYYY-MM-DD HH:mm Z",
      "error": "/dev/stdout",
      "no-autorestart": true
    }
  ]
}